<h1>Cocktails#show</h1>


<div class="card-show">
  <div class="text">
    <h2><%=@cocktail.name %></h2>
    <h3><i>Ingredients:</i></h3>
    <% @doses.each do |dose|%>
    <p><%= dose.ingredient.name %> - <%= dose.description %></p>
    <% end %>
    <% @reviews.each do |review|%>
    <p><%= review.username %></p>
    <p><%= review.content %></p>
    <% num = review.rating.to_i %>
    <% num.times do %>
    <i class="fas fa-star"></i>
    <%end%>
    <% (5 - num).times do %>
    <i class="far fa-star"></i>
    <%end%>
    <% end %>
    <div class= "btns-all ">
      <div class = "btns">
      <%= link_to('<i class="fas fa-plus"></i> Add a new Ingredient'.html_safe, new_cocktail_dose_path(@cocktail),  class: "btn-fnt") %>
      </div>
      <div class = "btns">
      <%= link_to('<i class="far fa-edit"></i> Add a new Review'.html_safe, new_cocktail_review_path(@cocktail),  class: "btn-fnt") %>
      </div>
      <div class = "btns">
      <%= link_to('<i class="fas fa-undo"></i> Return to all Cocktails'.html_safe, cocktails_path,  class: "btn-fnt") %>
      </div>
    </div>
  </div>
  <div>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  </div>
</div>




