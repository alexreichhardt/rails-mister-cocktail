
<%= simple_form_for [@cocktail, @review] do |f| %>
 <% if @review.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :username %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 1..5 %>
  <%= f.submit "Add a review", class: "btn btn-primary" %>
<% end %>
